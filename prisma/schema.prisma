// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ProjectCategory {
  WEB_DEVELOPMENT
  GRAPHIC_DESIGN
  BRANDING
  UI_UX
  FULL_STACK
}

enum ProjectStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Project {
  id          String          @id @default(cuid())
  slug        String          @unique
  title       String
  description String
  content     String?         @db.Text

  category    ProjectCategory
  tags        String[]

  thumbnail   String
  images      String[]
  liveUrl     String?
  githubUrl   String?

  client      String?
  role        String?
  duration    String?
  year        Int

  techStack   String[]
  tools       String[]

  status      ProjectStatus   @default(DRAFT)
  featured    Boolean         @default(false)
  order       Int             @default(0)

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  publishedAt DateTime?

  @@index([category])
  @@index([status])
  @@index([featured])
  @@map("projects")
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  subject   String
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contact_submissions")
}

model LoginPin {
  id        String   @id @default(cuid())
  email     String
  pinHash   String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model SiteSettings {
  id                 String   @id @default("default")
  siteName           String   @default("Portfolio")
  siteDescription    String   @default("Full-stack developer & designer portfolio")
  ownerName          String   @default("Your Name")
  ownerEmail         String   @default("hello@example.com")
  ownerTitle         String   @default("Full-Stack Developer & Designer")
  ownerBio           String   @default("") @db.Text
  location           String   @default("California, USA")
  availability       String   @default("Available for projects")
  availabilityStatus String   @default("available") // available, busy, unavailable
  socialGithub       String?
  socialLinkedin     String?
  socialTwitter      String?
  socialInstagram    String?
  socialDribbble     String?
  contactEmail       String   @default("hello@example.com")
  resumeUrl          String?
  profileImageUrl    String?
  updatedAt          DateTime @updatedAt
}